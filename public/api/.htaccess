RewriteEngine On
RewriteBase /offr3d/api/

# CORS headers voor alle responses
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
  Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-API-KEY, X-CSRF, X-CSRF-Token, x-csrf"
</IfModule>

# OPTIONS preflight vroegtijdig 200 met headers
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Laat bestanden bestaan
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Laat POST toe zonder dat hij verandert naar GET
RewriteRule ^(.+\.php)$ $1 [QSA,L]
